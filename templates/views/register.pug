extends ../layouts/default

block content
    .container
        .row
            .col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
                form(method='post')
                    h2
                        | Please Sign Up 
                        small It's free and always will be.
                    hr.colorgraph
                    .row
                        .col-xs-12.col-sm-6.col-md-6
                            .form-group
                                input#first_name.form-control.input-lg(type='text', name='fname', value=formData.fname,placeholder='First Name', tabindex='1')
                        .col-xs-12.col-sm-6.col-md-6
                            .form-group
                                input#last_name.form-control.input-lg(type='text', name='lastname',value=formData.lastname, placeholder='Last Name', tabindex='2')
                    .form-group
                        input#display_name.form-control.input-lg(type='text', name='username',value=formData.username,placeholder='User Name', tabindex='3')
                    .form-group
                        input#email.form-control.input-lg(type='email', name='email',value=formData.email, placeholder='Email Address', tabindex='4')
                    .row
                        .col-xs-12.col-sm-6.col-md-6
                            .form-group
                                input#password.form-control.input-lg(type='password', name='password', placeholder='Password', tabindex='5')
                        .col-xs-12.col-sm-6.col-md-6
                            .form-group
                                input#password_confirmation.form-control.input-lg(type='password', name='password_confirmation', placeholder='Confirm Password', tabindex='6')
                    hr.colorgraph
                    .row
                        .col-xs-12.col-md-6
                            input.btn.btn-primary.btn-block.btn-lg(type='submit', value='Register', tabindex='7')
                        .col-xs-12.col-md-6
                            a.btn.btn-success.btn-block.btn-lg(href='/signin') Sign In
