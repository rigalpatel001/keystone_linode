extends ../layouts/default

block content
    .container
        .login-form
            .main-div
                .panel
                    h2 Signin
                form(method='post')
                    .form-group
                        input#inputEmail.form-control(type='email',name='email', placeholder='Email Address')
                    .form-group
                        input#inputPassword.form-control(type='password',name='password', placeholder='Password')
                    .forgot
                        a(href='/forgotpassword') Forgot password?
                    button.btn.btn-primary(type='submit') Login